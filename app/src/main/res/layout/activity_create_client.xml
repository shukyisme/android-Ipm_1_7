<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ipm_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="me.kwik.square.IpmLoginActivity">

        <!-- Client name Layout -->
        <LinearLayout
            android:id="@+id/create_client_activity_name_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="#FFF62C44"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/create_client_activity_client_name_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_2_vd"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/client_name"
                    android:hint="Client name"
                    android:paddingStart="10dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- E-mail Layout -->
        <LinearLayout
            android:id="@+id/create_client_activity_email_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_client_activity_name_LinearLayout"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="#FFF62C44"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/create_client_activity_client_email_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_2_vd"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/email_v2"
                    android:hint="E-mail"
                    android:paddingStart="10dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Client address Layout -->
        <LinearLayout
            android:id="@+id/create_client_activity_client_address_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_client_activity_email_LinearLayout"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#FFF62C44"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/create_client_activity_client_address_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_2_vd"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/client_address"
                    android:hint="Client address "
                    android:paddingStart="10dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Contact person -->
        <LinearLayout
            android:id="@+id/create_client_activity_contact_person_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_client_activity_client_address_LinearLayout"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#FFF62C44"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/create_client_activity_contact_person_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_2_vd"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/contact_person"
                    android:hint="Contact Person "
                    android:paddingStart="10dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Phone number -->
        <LinearLayout
            android:id="@+id/create_client_activity_phone_number_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_client_activity_contact_person_LinearLayout"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#FFF62C44"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/create_client_activity_phone_number_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_2_vd"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/phone_number"
                    android:hint="Phone number "
                    android:paddingStart="10dp" />
            </LinearLayout>

        </LinearLayout>
        <!-- Trap description Layout -->
        <LinearLayout
            android:id="@+id/create_client_activity_description_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_client_activity_phone_number_LinearLayout"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#FFF62C44"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/create_client_activity_description_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/rectangle_2_vd"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/rectangle_4"
                    android:hint="Enter description"
                    android:paddingStart="10dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- required comment Text view -->
        <TextView
            android:id="@+id/required_comment_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_client_activity_description_LinearLayout"
            android:text="* Fields marked in red are required"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#FFF62C44"
            android:textSize="16sp"/>


        <!-- Next button layout -->
        <LinearLayout
            android:id="@+id/create_client_activity_create_button_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/required_comment_TextView"
            android:gravity="center">

            <Button
                android:id="@+id/create_client_activity_create_button_Button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="@drawable/start_button_selector"
                android:text="Create Client"
                android:textSize="24sp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>

