<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wi_fi_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kwik_me_white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.kwik.appsquare.WiFiSelectionActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/setup_activity_increase_comment_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/add_serial_manually_enter_number_request"
        android:maxLines="3"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/kwik_me_gray_comments"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scaleType="fitCenter"
        android:src="@drawable/back_of_the_kwik_button"
        android:layout_gravity="center"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <Button
            android:layout_marginRight="9dp"
            android:layout_marginLeft = "9dp"
            android:id="@+id/yes_button"
            android:layout_width="match_parent"
            android:layout_marginTop="70dp"
            android:layout_height="45dp"
            android:onClick="enterSerialNumberClicked"
            android:background="@drawable/wifi_selection_yes"
            android:text="@string/add_serial_manually_activity_open_dialog_button"
            android:textSize="24sp"/>

        <Button
            android:layout_marginRight="9dp"
            android:layout_marginLeft = "9dp"
            android:id="@+id/no_button"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:onClick="noClicked"
            android:layout_height="45dp"
            android:background="@drawable/wifi_selection_yes"
            android:text="@string/no"
            android:textSize="24sp"
            android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>
