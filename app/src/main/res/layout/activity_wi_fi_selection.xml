<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wi_fi_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kwik_me_white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.kwik.square.WiFiSelectionActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_weight="0.40"
        android:scaleType="fitCenter"
        android:src="@drawable/wifi_setup"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/setup_activity_increase_comment_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.52"
        android:text="@string/wifi_selection_activity_question"
        android:gravity="top|center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textColor="@color/kwik_me_blue_text_color"/>

  

    <Button
        android:layout_marginRight="9dp"
        android:layout_marginLeft = "9dp"
        android:id="@+id/yes_button"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="45dp"
        android:onClick="yesClicked"
        android:background="@drawable/start_button_selector"
        android:text="@string/i_have_a_dedicated_router"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="#A0AEB9" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  Or  "
            android:textColor="#A0AEB9"
            android:textSize="20sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"

            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="#A0AEB9" />

    </LinearLayout>


    <Button
        android:layout_marginRight="9dp"
        android:layout_marginLeft = "9dp"
        android:id="@+id/no_button"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:onClick="noClicked"
        android:layout_height="45dp"
        android:background="@drawable/wifi_selection_yes"
        android:text="@string/i_have_client_wifi_network"
        android:textSize="24sp"/>

</LinearLayout>
