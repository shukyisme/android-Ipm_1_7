<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.kwik.appsquare.UpdatePersonalDetailsActivity"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/update_personal_details_activity_name_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        >

        <EditText
            android:id="@+id/update_personal_details_activity_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sign_up_activity_name_hint"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:lines="1"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/update_personal_details_activity_last_name_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        >

        <EditText
            android:id="@+id/update_personal_details_activity_last_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sign_up_activity_lase_name_hint"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:lines="1"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/update_personal_details_activity_phone_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_personal_details_activity_name_input_layout"
        android:background="@android:color/transparent">

        <EditText
            android:id="@+id/update_personal_details_activity_phone_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sign_up_activity_phone_hint"
            android:inputType="numberDecimal"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:singleLine="true"
            android:lines="1"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/update_personal_details_activity_phone_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        >

        <EditText
            android:id="@+id/update_personal_details_activity_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/update_personal_details_activity_email_hint"
            android:singleLine="true"
            android:lines="1"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/update_personal_details_activity_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_personal_details_activity_phone_email_layout"
        android:background="@android:color/transparent">

        <EditText
            android:id="@+id/update_personal_details_activity_buttons_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/update_personal_details_activity_buttons_hint"
            android:singleLine="true"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:lines="1"/>

    </android.support.design.widget.TextInputLayout>



    <ListView
        android:id="@+id/update_personal_details_activity_address_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_personal_details_activity_buttons_layout"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:descendantFocusability="beforeDescendants"></ListView>
</LinearLayout>
