<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:id="@+id/activity_ipm_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.kwik.appsquare.IpmLoginActivity">

    <LinearLayout
        android:id="@+id/client_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/client_name"
            android:drawableStart="@drawable/user_id"
            android:drawablePadding="10dp"/>
        <AutoCompleteTextView
        android:id="@+id/client_name_autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:hint="@string/search"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/site_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/client_name_layout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/site"
            android:drawableStart="@drawable/address_icon"
            android:drawablePadding="10dp"/>
        <AutoCompleteTextView
            android:id="@+id/site_autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/search"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/site_layout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coordinator"
            android:drawableStart="@drawable/user_id"
            android:drawablePadding="10dp"/>
        <AutoCompleteTextView
            android:id="@+id/coordinator_autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/search"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trap_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/coordinator_layout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trap_name"
            android:drawableStart="@drawable/wifi_setup_small"
            android:drawablePadding="10dp"/>
        <EditText
            android:id="@+id/trap_name_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trap_description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/trap_name_layout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trap_description"
            android:drawableStart="@drawable/wifi_setup_small"
            android:drawablePadding="10dp"/>
        <EditText
            android:id="@+id/trap_description_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/next_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trap_description_layout"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >
        <Button
            android:layout_marginRight="9dp"
            android:layout_marginLeft = "9dp"
            android:id="@+id/log_in_activity_next_button"
            android:layout_width="match_parent"
            android:onClick="onNextClick"
            android:layout_height="45dp"
            android:background="@drawable/start_button_selector"
            android:text="@string/base_activity_next"
            android:textSize="24sp"/>
    </LinearLayout>

</RelativeLayout>
</ScrollView>
