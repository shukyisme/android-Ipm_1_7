<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <TextView
            android:id="@+id/troubleshooting_list_item_question_TextView"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="During trap installation, after returning to the app from the wi-fi settings, the app is stuck on100% (android) or Registering trap(iOS)"
            android:textColor="@color/outerspace"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">
        </TextView>
        <ImageButton
            android:id="@+id/troubleshooting_list_item_arrow_ImageButton"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:src="@drawable/right_blue_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/troubleshooting_list_item_possibles_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/ashgrey"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</LinearLayout>