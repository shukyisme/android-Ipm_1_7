<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.kwik.appsquare.SelectProductActivity"
    android:background="#ececec">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_product_title_image_view"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"/>

        <ListView
            android:id="@+id/select_product_activity_products_list_view"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:choiceMode="multipleChoice"
            android:layout_marginTop="22dp"
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:headerDividersEnabled="true"
            android:dividerHeight="10.0sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/select_product_title_image_view" />
    <Button
        android:id="@+id/modify_order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kwik_me_orange"
        android:text="@string/modify_order"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <ProgressBar
        android:id="@+id/select_product_activity_update_progress_bar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone">

    </ProgressBar>

    <ProgressBar
        android:id="@+id/select_product_activity_progress_bar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

    </ProgressBar>
</RelativeLayout>
